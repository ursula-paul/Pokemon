{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node", 
    "noImplicitAny": false,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "baseUrl": "src",

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}